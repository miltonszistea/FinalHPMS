@using FinalHPMS.ViewModels;
@model CommunityCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Agregue una comunidad:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityAndCountry" class="control-label"></label>
                <input asp-for="CityAndCountry" class="form-control" />
                <span asp-validation-for="CityAndCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommunityType" class="control-label"></label>
                <select asp-for="CommunityType" class="form-control">
                    <option value="0">CollectionPoint</option>
                    <option value="1">RecyclingSpace</option>
                    <option value="2">MachineShop</option>
                    <option value="3">AwarenessPoint</option>
                </select>
                <span asp-validation-for="CommunityType" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div> *@
            <div>
                <dt class = "col-6">
                    @Html.DisplayNameFor(model => model.ProductsIds)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ProductsIds)
                </dd>
            </div>
            <div>
            <dt class = "col-6">
                    @Html.DisplayNameFor(model => model.Products)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Products)
                </dd>
            </div>


            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Comunidades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
